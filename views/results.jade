link(rel='stylesheet', href='/stylesheets/results.css')

.back
	a(href="/") &laquo; Search

h1 Doctors near #{location}

ul
	- each doctor in doctors
		li.doctor
			h2= doctor.name
			.row.distance #{doctor.distance} #{doctor.distanceUnits} away
			
			.row.actions
				- each phoneNumber in doctor.phoneNumbers
					a(href="tel:#{phoneNumber}") #{phoneNumber}
				a(href="http://maps.google.com/maps?q=#{doctor.addressString}") map
				
			.row.feedback= doctor.feedback
			.row.address!= doctor.address
			.row.gps= doctor.GPs
			.row.sataisfaction= doctor.satisfaction
			.row.appointments= doctor.extendedAppointments
